#######################################################
## Generated by Chef for <%= node["hostname"] %>
#######################################################

server {
  listen 80;

  location /nginx_stub_status { 
    stub_status on;
    allow 127.0.0.1;
    <% @routes.each do |r| %>
    allow <%= r.to_s %>;
    <% end %>
    deny all;
  }

  location / { 
    access_log /var/log/nginx/redirect.log main;
    rewrite ^(.*) https://$host$1 permanent;
  }
}